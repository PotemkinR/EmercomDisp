@model EmercomDisp.Web.Models.CallResponses.CallResponseCreateModel

@{
    ViewBag.Title = "CreateCallResponse";
}

<h2>Send brigade</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.CallId)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedBrigade, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.SelectedBrigade, Model.Brigades)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "CallDetails", "Call", new { id = Model.CallId },null)
</div>
