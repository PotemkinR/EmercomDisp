@model EmercomDisp.Web.Models.Victims.VictimsListModel

@{
    ViewBag.Title = "VictimsList";
}

<h2>Victims List</h2>

<table class="table table-condensed">
    <tr>
        <th>
            Name
        </th>
        <th>
            Residence
        </th>
        <th>
            Age
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Victims)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Residence
            </td>
            <td>
                @item.Age
            </td>
            <td>
                @Html.ActionLink("Edit", "EditVictim", new { id = item.Id, callId = Model.CallId }) |
                @Html.ActionLink("Delete", "DeleteVictim", new { id = item.Id, callId = Model.CallId })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Add", "AddVictim", new { callId = Model.CallId })
</p>
<p>
    @Html.ActionLink("Back", "CallDetails", "Call", new { id = Model.CallId }, null)
</p>