@model EmercomDisp.Web.Models.Calls.CallListViewModel

<h2>CallList</h2>

<div>
    @Html.ActionLink("Search", "Search")
</div>
<div class="col-md-2">
    <h4>Categories</h4>
    @{Html.RenderAction("Category", "Category"); }
</div>
<div class="col-md-10">
    <div>
        <button type="button" class="btn btn-danger col-lg-3 col-lg-offset-1" onclick="location.href='@Url.Action("CreateCall", "Call")' ;return false;">New Call</button>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>Reason</th>
                <th>CallTime</th>
                <th>Category</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody id="result">
            @foreach (var call in Model.CallList)
            {
                Html.RenderAction("CallListItem", call);
            }
        </tbody>
    </table>
</div>
