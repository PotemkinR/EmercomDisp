@model EmercomDisp.Web.Models.Users.UserListModel

@{
    ViewBag.Title = "UserList";
}

<div class="panel" style="width:100%">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-condensed">
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var user in Model.Users)
        {
        <tr>
            <td class="col-lg-2">
                @Html.DisplayFor(model => user.Name)
            </td>
            <td class="col-lg-2">
                @Html.DisplayFor(model => user.Email)
            </td>
            <td class="col-lg-3">
                @if (HttpContext.Current.User.Identity.Name != user.Name)
                {
                    <td>
                        @Html.ActionLink("Edit", "EditUser", "User", new { name = user.Name }, null) |
                        @Html.ActionLink("Delete", "DeleteUser", "User", new { name = user.Name }, null)
                    </td>
                }
        
        </tr>
        }
    </table>
</div>
<button type="button" class="btn btn-default col-lg-3" onclick="location.href='@Url.Action("CreateUser", "User")';return false;"><span class="btn-span"></span>New User</button>